@model BobaShop.Web.Models.DrinkVm
@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>
<p class="text-muted">Are you sure you want to delete this product?</p>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Base Price</dt>
            <dd class="col-sm-9">@Model.BasePrice.ToString("C")</dd>

            <dt class="col-sm-3">Active</dt>
            <dd class="col-sm-9">@(Model.IsActive ? "Yes" : "No")</dd>

            <dt class="col-sm-3">Created</dt>
            <dd class="col-sm-9">@Model.CreatedUtc?.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <button class="btn btn-danger" type="submit">Delete</button>
    <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    @Html.AntiForgeryToken()
</form>
