@model IEnumerable<BobaShop.Web.Models.DrinkVm>
@{
    ViewData["Title"] = "Products";
}
<h1 class="mb-3">Products</h1>

@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error:</strong> @err
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Ok"] is string ok)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success:</strong> @ok
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="mb-0 text-muted">Manage all drinks available in the menu.</p>
    <a asp-area="Admin" asp-controller="Products" asp-action="Create" class="btn btn-primary">
        + Add Product
    </a>
</div>

<table class="table table-striped table-hover align-middle shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th style="width:120px;">Base Price</th>
            <th style="width:90px;">Active</th>
            <th style="width:190px;">Created</th>
            <th style="width:180px;" class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var d in Model)
            {
                <tr>
                    <td>@d.Name</td>
                    <td>@d.BasePrice.ToString("C")</td>
                    <td>@(d.IsActive ? "Yes" : "No")</td>
                    <td>@d.CreatedUtc?.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="text-end">
                        <a asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@d.Id"
                           class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                        <a asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@d.Id"
                           class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted py-3">
                    No products found.
                </td>
            </tr>
        }
    </tbody>
</table>
