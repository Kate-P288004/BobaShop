@model BobaShop.Web.Models.ToppingVm
@{
    ViewData["Title"] = "Delete Topping";
}

<h1>Delete Topping</h1>
<p class="text-muted">Are you sure you want to delete this topping?</p>

<div class="card mb-3 shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-3">Active</dt>
            <dd class="col-sm-9">@(Model.IsActive ? "Yes" : "No")</dd>

            <dt class="col-sm-3">Created</dt>
            <dd class="col-sm-9">@Model.CreatedUtc?.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-area="Admin" asp-controller="Toppings" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    @Html.AntiForgeryToken()
</form>
