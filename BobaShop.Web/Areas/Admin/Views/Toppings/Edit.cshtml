@model BobaShop.Web.Models.EditToppingVm
@{
    ViewData["Title"] = "Edit Topping";
    var id = (string?)ViewBag.ToppingId ?? "";
}

<h1>Edit Topping</h1>

@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<form asp-action="Edit" asp-route-id="@id" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Save changes</button>
    <a asp-area="Admin" asp-controller="Toppings" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
