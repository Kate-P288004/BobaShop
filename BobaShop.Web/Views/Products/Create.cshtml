@model BobaShop.Web.Models.ProductCreateVm
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration

@{
    ViewData["Title"] = "Create Product";
}

<h1 class="mb-3">Create Product</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-3">
        <div class="col-12">
            <label asp-for="Name" class="form-label fw-semibold"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="BasePrice" class="form-label"></label>
            <input asp-for="BasePrice" class="form-control" />
            <span asp-validation-for="BasePrice" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="SmallUpcharge" class="form-label"></label>
            <input asp-for="SmallUpcharge" class="form-control" />
            <span asp-validation-for="SmallUpcharge" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="MediumUpcharge" class="form-label"></label>
            <input asp-for="MediumUpcharge" class="form-control" />
            <span asp-validation-for="MediumUpcharge" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="LargeUpcharge" class="form-label"></label>
            <input asp-for="LargeUpcharge" class="form-control" />
            <span asp-validation-for="LargeUpcharge" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="DefaultSugar" class="form-label"></label>
            <input asp-for="DefaultSugar" class="form-control" />
            <div class="form-text">Use 0, 25, 50, 75, or 100.</div>
            <span asp-validation-for="DefaultSugar" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="DefaultIce" class="form-label"></label>
            <input asp-for="DefaultIce" class="form-control" />
            <div class="form-text">Use 0, 25, 50, 75, or 100.</div>
            <span asp-validation-for="DefaultIce" class="text-danger"></span>
        </div>

        <!-- Image block -->
        <div class="col-12">
            <label class="form-label fw-semibold">Image</label>
            <div class="d-flex align-items-center gap-3">
                <img id="preview" src="" alt="" style="width:88px;height:88px;object-fit:cover;border-radius:8px;border:1px solid #ddd;display:none;" />
                <button type="button" id="btnChoose" class="btn btn-outline-secondary">Choose from presets</button>
                <input asp-for="ImageUrl" type="hidden" id="ImageUrl" />
            </div>
            <div class="mt-2">
                <label asp-for="ImageAlt" class="form-label"></label>
                <input asp-for="ImageAlt" class="form-control" id="ImageAlt" placeholder="e.g. Taro Milk Tea" />
                <span asp-validation-for="ImageAlt" class="text-danger"></span>
            </div>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="col-12 form-check mt-2">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label"></label>
        </div>

        <div class="col-12 mt-4">
            <button type="submit" class="btn btn-success">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>

    <!-- Picker panel -->
    <div id="picker" class="border rounded p-3 mt-3" style="display:none;background:#fff;">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="m-0">Choose a preset</h6>
            <button type="button" id="btnClose" class="btn btn-sm btn-light">Close</button>
        </div>
        <div id="presetGrid" class="row row-cols-2 row-cols-md-4 g-3 mt-1"></div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const apiBase = '@(Configuration["Api:BaseUrl"] ?? "")'.replace(/\/+$/,'/');
            const token   = localStorage.getItem('jwt');

            const btnChoose = document.getElementById('btnChoose');
            const btnClose  = document.getElementById('btnClose');
            const picker    = document.getElementById('picker');
            const grid      = document.getElementById('presetGrid');
            const hiddenUrl = document.getElementById('ImageUrl');
            const preview   = document.getElementById('preview');
            const altInput  = document.getElementById('ImageAlt');
            let loaded = false;

            function setImage(url, alt) {
                hiddenUrl.value = url;
                const absolute = url.startsWith('http') ? url : (apiBase + url.replace(/^\/+/, ''));
                preview.src = absolute;
                preview.alt = alt || '';
                preview.style.display = 'inline-block';
            }

            btnChoose?.addEventListener('click', async () => {
                picker.style.display = 'block';
                if (loaded) return;
                try {
                    const res = await fetch(apiBase + 'api/v1/Media/presets/drinks', {
                        headers: { Authorization: `Bearer ${token}` }
                    });
                    const presets = await res.json();
                    grid.innerHTML = presets.map(p => {
                        const src = p.url.startsWith('http') ? p.url : (apiBase + p.url.replace(/^\/+/, ''));
                        return `
                          <div class="col">
                            <button type="button" class="btn w-100 p-0 preset" data-url="${p.url}" data-title="${p.title}" style="border:1px solid #eee;border-radius:8px;overflow:hidden;">
                              <img src="${src}" alt="${p.title}" style="width:100%;height:110px;object-fit:cover;" />
                              <div class="p-2 text-center">${p.title}</div>
                            </button>
                          </div>`;
                    }).join('');
                    grid.addEventListener('click', e => {
                        const btn = e.target.closest('.preset');
                        if (!btn) return;
                        setImage(btn.dataset.url, btn.dataset.title);
                        if (!altInput.value) altInput.value = btn.dataset.title || '';
                        picker.style.display = 'none';
                    });
                    loaded = true;
                } catch {
                    grid.innerHTML = `<div class="col"><div class="text-danger">Could not load presets.</div></div>`;
                }
            });

            btnClose?.addEventListener('click', () => picker.style.display = 'none');
            if (hiddenUrl?.value) setImage(hiddenUrl.value, altInput?.value || '');
        })();
    </script>
}
