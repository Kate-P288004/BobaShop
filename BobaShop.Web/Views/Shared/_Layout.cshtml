@using Microsoft.AspNetCore.Identity
@using BobaShop.Web.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] – BoBaTastic</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Site CSS (your hero + custom styles) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Optional favicon -->
    @* <link rel="icon" type="image/png" href="~/images/favicon.png" asp-append-version="true" /> *@

    <style>
        :root {
            --brand: #8B5CF6;
            --surface: #F3E8FF;
            --ink: #1F2937;
        }

        html, body {
            height: 100%;
        }

        body {
            background-color: var(--surface);
            color: var(--ink);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background-color: var(--brand);
        }

        .navbar-brand, .nav-link {
            color: #fff !important;
            font-weight: 500;
        }

        .nav-link:hover {
            color: #E0E7FF !important;
        }

        /* Card defaults */
        .card {
            border: 0;
            border-radius: 16px;
            box-shadow: 0 10px 24px rgba(0,0,0,.08);
            overflow: hidden;
            background: #fff;
        }

        .card-img-top {
            width: 100%;
            aspect-ratio: 4/3;
            object-fit: cover;
            display: block;
        }

        footer {
            background-color: var(--brand);
            color: #fff;
            padding: 1rem 0;
            margin-top: auto;
            position: relative;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">🧋 BoBaTastic</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- LEFT side links -->
                    <ul class="navbar-nav me-auto align-items-lg-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">Menu</a>
                        </li>

                        @* Cart badge component *@
                        @await Component.InvokeAsync("CartBadge")

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Rewards" asp-action="Index">Rewards</a>
                        </li>

                        @* Admin link (only visible for Admins) *@
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a>
                            </li>
                        }
                    </ul>

                    <!-- RIGHT side auth block -->
                    <ul class="navbar-nav ms-auto align-items-lg-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var me = await UserManager.GetUserAsync(User);

                            <li class="nav-item me-2">
                                <span class="badge rounded-pill text-bg-light">
                                    Rewards: @me?.RewardPoints
                                </span>
                            </li>
                            <li class="nav-item">
                                <span class="navbar-text me-2">Hi, @User.Identity?.Name</span>
                            </li>
                            <li class="nav-item">
                                <form class="d-inline" asp-controller="Account" asp-action="Logout" method="post">
                                    <button class="btn btn-outline-light btn-sm">Logout</button>
                                </form>
                            </li>
                        
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN BODY -->
    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="text-center">
        <div class="container position-relative">
            <small>© @DateTime.Now.Year BoBaTastic – All rights reserved.</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
